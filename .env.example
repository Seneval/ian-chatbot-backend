# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secrets (IMPORTANTE: usar valores seguros aleatorios en producción)
# Genera con: openssl rand -base64 32
JWT_SECRET=generate-strong-random-string-here
ADMIN_JWT_SECRET=generate-different-strong-random-string-here

# MongoDB Configuration
MONGODB_URI=your-mongodb-connection-string-here

# Admin Setup (usar solo para configuración inicial, luego eliminar)
ADMIN_SETUP_KEY=one-time-setup-key-change-after-use

# Test API Key (opcional, para acceder a endpoints de prueba en producción)
TEST_API_KEY=your-test-api-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Rate Limiting (requests por minuto)
RATE_LIMIT_MAX=30
RATE_LIMIT_WINDOW_MS=60000

# CORS Origins (separados por comas) - estos se agregan a los origins predefinidos
# Ejemplo: ALLOWED_ORIGINS=https://example.com,https://app.example.com
ALLOWED_ORIGINS=

# Widget URL (opcional, tiene valor por defecto)
WIDGET_URL=

# Sentry Configuration (opcional, para error tracking)
SENTRY_DSN=

# Enable Test Endpoints in Production (opcional)
# ENABLE_TEST_ENDPOINTS=true